<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/MainButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF80AB"
        android:onClick="goToLogActivity"
        android:text="Log Body Temperature"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FDFCFC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.413" />

    <TextView
        android:id="@+id/MainButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF80AB"
        android:onClick="goToNormalActivity"
        android:text="Check Normal Range"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FDFCFC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514" />

    <TextView
        android:id="@+id/MainButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF80AB"
        android:onClick="goToMechanismActivity"
        android:text="Mechanism of Fever"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FDFCFC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.607" />

    <TextView
        android:id="@+id/MainButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FF80AB"
        android:onClick="goToLink2"
        android:text="Handling Fever"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FDFCFC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.716" />

    <View
        android:id="@+id/TitleBackground"
        android:layout_width="410dp"
        android:layout_height="215dp"
        android:background="#A7FFEB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="36dp"
        android:background="#A7FFEB"
        android:text="BT Traker"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FF80AB"
        app:layout_constraintBottom_toBottomOf="@+id/TitleBackground"
        app:layout_constraintStart_toEndOf="@+id/Titleimage" />

    <ImageView
        android:id="@+id/Titleimage"
        android:layout_width="82dp"
        android:layout_height="61dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/TitleBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/btn_star" />

</androidx.constraintlayout.widget.ConstraintLayout>